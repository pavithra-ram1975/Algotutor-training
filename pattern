public class Pattern {
    public static void main(String[] args)
    {
        int row=5;
        for(int i=1;i<=row;i++){
            for(int j=row;j>=i;j--){
            // System.out.print("*");
            System.out.print(j);

            }
            System.out.println();
        }
    }
}
