public class Pattern {
    public static void main(String[] args)
    {
        int row =1;
        for(int i=5;i>=row;i--){
            for(int j=1;j<=i;j++){
            System.out.print("*");
            // System.out.print(j);

            }
            System.out.println();
        }
    }
